<%- include("partials/header.ejs") %>
<!-- content -->
<main class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-title">
            <div class="d-flex align-items-center">
              <form
                action="/add-contact"
                method="post"
                name="myForm"
                onsubmit="return validation()"
              >
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12 class-1">
                      <div class="form-group row">
                        <div class="col-md-14">
                          <input
                            type="text"
                            name="first_name"
                            id="first_name"
                            class="form-control"
                          />
                        </div>
                      </div>

                      <div class="form-group row mb-0">
                        <div class="col-md-9 offset-md-3">
                          <button type="submit" class="btn btn-primary">
                            Save
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">First Name</th>

                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.first_name %></td>

                  <td width="150">
                    <a
                      href="/show-contact/<%= contact._id %>"
                      class="btn btn-sm btn-circle btn-outline-info"
                      title="Show"
                      >View
                    </a>
                    <a
                      href="/update-contact/<%= contact._id %>"
                      class="btn btn-sm btn-circle btn-outline-secondary"
                      title="Edit"
                      >Update
                    </a>
                    <a
                      href="/delete-contact/<%= contact._id %>"
                      class="btn btn-sm btn-circle btn-outline-danger"
                      title="Delete"
                      onclick="confirm('Are you sure?')"
                      >Delete
                    </a>
                  </td>
                </tr>

                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer.ejs') %>
